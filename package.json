{
  "name": "@hexafield/simple-store",
  "version": "1.0.0",
  "type": "module",
  "description": "A lightweight reactive state management library for React and vanilla JavaScript",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:ts && npm run build:rollup",
    "build:ts": "tsc",
    "build:rollup": "rollup -c",
    "clean": "rm -rf dist",
    "dev": "rollup -c -w",
    "format": "prettier --write .",
    "test": "npm run build && vitest run",
    "test:watch": "npm run build && vitest",
    "test:ui": "npm run build && vitest --ui",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "state-management",
    "react",
    "reactive",
    "store",
    "hooks",
    "typescript"
  ],
  "author": "HexaField",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HexaField/simple-store.git"
  },
  "homepage": "https://github.com/HexaField/simple-store#readme",
  "bugs": {
    "url": "https://github.com/HexaField/simple-store/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.3",
    "@vitest/expect": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "react": "^19.1.1",
    "rollup": "^4.21.0",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}
